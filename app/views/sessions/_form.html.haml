.container
  .row.justify-content-center
    = form_with(scope: :session,url: login_path,class: "shadow p-3 mb-3 bg-info rounded",local: true) do |form| #Here we dont use a model , so we use an scope
      .form-group.row
        =form.label :email, class: "col-2 col-form-label"
        .col-10
          =form.email_field :email,class: "form-control",placeholder: "Enter your Email"
      .form-group.row
        =form.label :password, class: "col-2 col-form-label"
        .col-10
          =form.password_field :password,class: "form-control",placeholder: "Enter your Password"
      .form-group.row.justify-content-center
        = form.submit "Log in", class: "btn btn-outline-light btn-light text-black" , id: "form-button"
  .d-flex.justify-content-center
    = link_to "[Cancel and return to Home page]", root_path(), class:"text-info"

